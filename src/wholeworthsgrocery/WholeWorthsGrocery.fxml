<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<VBox prefHeight="450.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/15" xmlns:fx="http://javafx.com/fxml/1" fx:controller="wholeworthsgrocery.Controller">
   <children>
      <FlowPane alignment="CENTER" prefWidth="600.0">
         <children>
            <Label prefHeight="17.0" text="Wholeworths Grocery Items:" textFill="#974646">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets left="10.0" right="10.0" top="10.0" />
         </padding>
      </FlowPane>
      <FlowPane>
         <children>
            <Label prefHeight="17.0" text="Eggs:" textFill="#974646">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets left="10.0" right="10.0" top="10.0" />
         </padding>
      </FlowPane>
      <FlowPane hgap="10.0">
         <padding>
            <Insets bottom="20.0" left="10.0" right="10.0" />
         </padding>
         <children>
            <Label prefHeight="17.0" text="Qty:">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <TextField fx:id="inputEggs" alignment="CENTER" prefHeight="25.0" prefWidth="91.0" promptText="Eggs Qty" />
            <Label prefHeight="17.0" text="Subtotal:">
               <font>
                  <Font size="18.0" />
               </font>
               <padding>
                  <Insets left="50.0" />
               </padding>
            </Label>
            <TextField fx:id="subtotalEggs" alignment="CENTER" editable="false" focusTraversable="false" promptText="Eggs Subtotal" />
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </FlowPane>
      <FlowPane>
         <children>
            <Label prefHeight="17.0" text="Milk:" textFill="#974646">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets left="10.0" right="10.0" top="10.0" />
         </padding>
      </FlowPane>
      <FlowPane hgap="10.0">
         <padding>
            <Insets bottom="20.0" left="10.0" right="10.0" />
         </padding>
         <children>
            <Label prefHeight="17.0" text="Qty:">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <TextField fx:id="inputMilk" alignment="CENTER" prefHeight="25.0" prefWidth="91.0" promptText="Milk Qty" />
            <Label prefHeight="17.0" text="Subtotal:">
               <font>
                  <Font size="18.0" />
               </font>
               <padding>
                  <Insets left="50.0" />
               </padding>
            </Label>
            <TextField fx:id="subtotalMilk" alignment="CENTER" editable="false" focusTraversable="false" promptText="Milk Subtotal" />
         </children>
      </FlowPane>
      <FlowPane>
         <children>
            <Label prefHeight="17.0" text="Bread:" textFill="#974646">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets left="10.0" right="10.0" top="10.0" />
         </padding>
      </FlowPane>
      <FlowPane hgap="10.0">
         <padding>
            <Insets bottom="20.0" left="10.0" right="10.0" />
         </padding>
         <children>
            <Label prefHeight="17.0" text="Qty:">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <TextField fx:id="inputBread" alignment="CENTER" prefHeight="25.0" prefWidth="91.0" promptText="Bread Qty" />
            <Label prefHeight="17.0" text="Subtotal:">
               <font>
                  <Font size="18.0" />
               </font>
               <padding>
                  <Insets left="50.0" />
               </padding>
            </Label>
            <TextField fx:id="subtotalBread" alignment="CENTER" editable="false" focusTraversable="false" promptText="Bread Subtotal" />
         </children>
      </FlowPane>
      <FlowPane alignment="CENTER">
         <padding>
            <Insets left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <Button fx:id="btnCalculate" mnemonicParsing="false" onAction="#buttonCalculatorHandler" text="Calculate">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Button>
         </children>
      </FlowPane>
      <FlowPane alignment="CENTER" hgap="10.0">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <Label prefHeight="17.0" text="Total:" textFill="#974646">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <Label prefHeight="17.0" text="Subtotal:">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
               <padding>
                  <Insets left="50.0" />
               </padding>
            </Label>
            <TextField fx:id="totalPrice" alignment="CENTER" editable="false" focusTraversable="false" promptText="Total Price" />
         </children>
      </FlowPane>
   </children>
</VBox>
